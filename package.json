{
  "name": "copytree",
  "version": "1.0.0",
  "description": "A Node.js CLI tool that copies directory structures and file contents into structured XML format",
  "main": "index.js",
  "bin": {
    "copytree": "./bin/copytree.js"
  },
  "scripts": {
    "start": "node bin/copytree.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration",
    "benchmark": "node tests/performance/benchmark.js",
    "lint": "eslint src/ bin/ --ext .js",
    "lint:fix": "eslint src/ bin/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"bin/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"bin/**/*.js\" \"tests/**/*.js\"",
    "prepare": "npm run lint && npm run test",
    "prepublishOnly": "npm run test:coverage && npm run benchmark"
  },
  "keywords": [
    "cli",
    "directory",
    "xml",
    "copy",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.10.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "inquirer": "^12.2.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "marked": "^16.1.1",
    "minimatch": "^10.0.3",
    "ora": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "simple-git": "^3.28.0",
    "tesseract.js": "^6.0.1",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/node": "^22.12.0",
    "babel-jest": "^30.0.4",
    "eslint": "^9.18.0",
    "jest": "^30.0.4",
    "prettier": "^3.5.0",
    "typescript": "^5.8.3"
  }
}
