{
  "name": "copytree",
  "version": "0.13.1",
  "description": "A Node.js CLI tool that copies directory structures and file contents into structured XML format",
  "bin": {
    "copytree": "./bin/copytree.js"
  },
  "scripts": {
    "start": "node bin/copytree.js",
    "start:dev": "node bin/copytree.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest tests/e2e",
    "benchmark": "node tests/performance/benchmark.js",
    "lint": "eslint src/ bin/",
    "lint:fix": "eslint src/ bin/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx}\" \"bin/**/*.js\" \"tests/**/*.{js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx}\" \"bin/**/*.js\" \"tests/**/*.{js,jsx}\"",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "keywords": [
    "cli",
    "directory",
    "xml",
    "copy",
    "ai"
  ],
  "author": "Greg Priday <greg@siteorigin.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregpriday/copytree.git"
  },
  "bugs": {
    "url": "https://github.com/gregpriday/copytree/issues"
  },
  "homepage": "https://copytree.dev",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.6.2",
    "clipboardy": "^5.0.0",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "ink": "^6.4.0",
    "ink-spinner": "^5.0.0",
    "inquirer": "^12.2.0",
    "joi": "^18.0.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "marked": "^16.4.1",
    "minimatch": "^10.1.1",
    "ora": "^9.0.0",
    "p-limit": "^7.2.0",
    "pdf-parse": "^2.4.5",
    "react": "^19.2.0",
    "simple-git": "^3.28.0",
    "tesseract.js": "^6.0.1",
    "xmlbuilder2": "^4.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.27.1",
    "@types/node": "^24.9.2",
    "babel-jest": "^30.0.4",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "eslint": "^9.18.0",
    "fast-xml-parser": "^5.3.0",
    "ink-testing-library": "^4.0.0",
    "jest": "^30.0.4",
    "jest-mock-fs": "^1.0.2",
    "prettier": "^3.5.0",
    "sharp": "^0.34.3",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.8.3"
  }
}
