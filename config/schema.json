{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://copytree.dev/config-schema.json",
  "title": "CopyTree Configuration Schema",
  "description": "JSON Schema for validating CopyTree configuration files",
  "type": "object",
  "properties": {
    "ai": {
      "type": "object",
      "description": "AI provider configuration",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["gemini"],
          "description": "AI provider name"
        },
        "providers": {
          "type": "array",
          "description": "Multi-provider configuration for fallback support",
          "items": {
            "$ref": "#/definitions/aiProviderConfig"
          }
        },
        "gemini": {
          "type": "object",
          "description": "Gemini AI configuration",
          "properties": {
            "apiKey": {
              "type": "string",
              "description": "Gemini API key"
            },
            "baseUrl": {
              "type": "string",
              "format": "uri",
              "description": "Gemini API base URL"
            },
            "timeout": {
              "type": "number",
              "minimum": 1000,
              "maximum": 300000,
              "description": "Request timeout in milliseconds"
            },
            "model": {
              "type": "string",
              "description": "Gemini model to use"
            }
          },
          "required": ["model"],
          "additionalProperties": false
        },
        "defaults": {
          "type": "object",
          "description": "Default AI parameters",
          "properties": {
            "temperature": {
              "type": "number",
              "minimum": 0,
              "maximum": 2,
              "description": "Response randomness"
            },
            "maxTokens": {
              "type": "number",
              "minimum": 1,
              "maximum": 32768,
              "description": "Maximum tokens in response"
            },
            "topP": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Top-p sampling parameter"
            },
            "topK": {
              "type": "number",
              "minimum": 1,
              "maximum": 100,
              "description": "Top-k sampling parameter"
            },
            "stream": {
              "type": "boolean",
              "description": "Enable streaming responses"
            }
          },
          "additionalProperties": false
        },
        "tasks": {
          "type": "object",
          "description": "Task-specific AI parameters",
          "properties": {
            "summarization": {
              "$ref": "#/definitions/aiTaskConfig"
            },
            "classification": {
              "$ref": "#/definitions/aiTaskConfig"
            },
            "codeDescription": {
              "$ref": "#/definitions/aiTaskConfig"
            },
            "imageDescription": {
              "$ref": "#/definitions/aiTaskConfig"
            },
            "profileCreation": {
              "$ref": "#/definitions/aiTaskConfig"
            }
          },
          "additionalProperties": false
        },
        "cache": {
          "type": "object",
          "description": "AI response caching",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable AI response caching"
            },
            "ttl": {
              "type": "number",
              "minimum": 60,
              "description": "Cache TTL in seconds"
            }
          },
          "additionalProperties": false
        },
        "retry": {
          "type": "object",
          "description": "AI request retry configuration",
          "properties": {
            "maxAttempts": {
              "type": "number",
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum retry attempts"
            },
            "initialDelay": {
              "type": "number",
              "minimum": 100,
              "description": "Initial retry delay in milliseconds"
            },
            "maxDelay": {
              "type": "number",
              "minimum": 1000,
              "description": "Maximum retry delay in milliseconds"
            },
            "backoffMultiplier": {
              "type": "number",
              "minimum": 1,
              "maximum": 10,
              "description": "Backoff multiplier for retry delays"
            },
            "retryableErrors": {
              "type": "array",
              "description": "Error codes that should be retried",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "promptsPath": {
          "type": "string",
          "description": "Path to prompt templates"
        }
      },
      "required": ["provider"],
      "additionalProperties": false
    },
    "app": {
      "type": "object",
      "description": "Application configuration",
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9\\.\\-]+)?$",
          "description": "Application version (semver)"
        },
        "description": {
          "type": "string",
          "description": "Application description"
        },
        "env": {
          "type": "string",
          "enum": ["development", "production", "test"],
          "description": "Environment"
        },
        "debug": {
          "type": "boolean",
          "description": "Enable debug mode"
        },
        "basePath": {
          "type": "string",
          "description": "Base path for the application"
        },
        "userConfigPath": {
          "type": "string",
          "description": "User configuration directory path"
        },
        "defaultCommand": {
          "type": "string",
          "description": "Default CLI command"
        },
        "interactiveMode": {
          "type": "boolean",
          "description": "Enable interactive mode"
        },
        "maxConcurrency": {
          "type": "number",
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum concurrent operations"
        },
        "chunkSize": {
          "type": "number",
          "minimum": 1024,
          "description": "Chunk size for streaming operations"
        },
        "defaultOutput": {
          "type": "string",
          "enum": ["clipboard", "file", "console", "stream"],
          "description": "Default output destination"
        },
        "outputEncoding": {
          "type": "string",
          "enum": ["utf8", "ascii", "base64", "hex"],
          "description": "Output encoding"
        },
        "prettyPrint": {
          "type": "boolean",
          "description": "Enable pretty printing"
        },
        "defaultInstructions": {
          "type": "string",
          "description": "Default instructions template"
        },
        "exitOnError": {
          "type": "boolean",
          "description": "Exit process on error"
        },
        "verboseErrors": {
          "type": "boolean",
          "description": "Show verbose error information"
        }
      },
      "additionalProperties": false
    },
    "cache": {
      "type": "object",
      "description": "Cache configuration",
      "properties": {
        "driver": {
          "type": "string",
          "enum": ["file", "memory", "redis"],
          "description": "Cache driver"
        },
        "enabled": {
          "type": "boolean",
          "description": "Enable caching"
        },
        "prefix": {
          "type": "string",
          "description": "Cache key prefix"
        },
        "defaultTtl": {
          "type": "number",
          "minimum": 60,
          "description": "Default TTL in seconds"
        },
        "file": {
          "type": "object",
          "description": "File cache configuration",
          "properties": {
            "path": {
              "type": ["string", "null"],
              "description": "Cache directory path"
            },
            "extension": {
              "type": "string",
              "pattern": "^\\.[a-zA-Z0-9]+$",
              "description": "Cache file extension"
            },
            "umask": {
              "type": "number",
              "description": "File permissions umask"
            },
            "gcProbability": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Garbage collection probability"
            },
            "maxAge": {
              "type": "number",
              "minimum": 60000,
              "description": "Maximum file age in milliseconds"
            }
          },
          "additionalProperties": false
        },
        "memory": {
          "type": "object",
          "description": "Memory cache configuration",
          "properties": {
            "max": {
              "type": "number",
              "minimum": 1,
              "description": "Maximum cached items"
            },
            "maxAge": {
              "type": "number",
              "minimum": 1000,
              "description": "Maximum age in milliseconds"
            },
            "updateAgeOnGet": {
              "type": "boolean",
              "description": "Update age on cache access"
            }
          },
          "additionalProperties": false
        },
        "transformations": {
          "$ref": "#/definitions/cacheSection"
        },
        "ai": {
          "$ref": "#/definitions/aiCacheSection"
        },
        "git": {
          "$ref": "#/definitions/cacheSection"
        },
        "profiles": {
          "$ref": "#/definitions/cacheSection"
        },
        "clearCommands": {
          "type": "object",
          "description": "Cache clearing commands",
          "properties": {
            "all": {
              "type": "string",
              "description": "Clear all cache command"
            },
            "transformations": {
              "type": "string",
              "description": "Clear transformations cache command"
            },
            "ai": {
              "type": "string",
              "description": "Clear AI cache command"
            },
            "git": {
              "type": "string",
              "description": "Clear git cache command"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "copytree": {
      "type": "object",
      "description": "CopyTree-specific configuration",
      "properties": {
        "globalExcludedDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Globally excluded directories"
        },
        "basePathExcludedDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Base path excluded directories"
        },
        "globalExcludedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Globally excluded file patterns"
        },
        "maxFileSize": {
          "type": "number",
          "minimum": 1024,
          "description": "Maximum file size in bytes"
        },
        "maxTotalSize": {
          "type": "number",
          "minimum": 1048576,
          "description": "Maximum total size in bytes"
        },
        "maxFileCount": {
          "type": "number",
          "minimum": 1,
          "description": "Maximum number of files"
        },
        "maxOutputSize": {
          "type": "number",
          "minimum": 1048576,
          "description": "Maximum output size in bytes"
        },
        "maxCharacterLimit": {
          "type": "number",
          "minimum": 1000,
          "description": "Maximum character limit"
        },
        "followSymlinks": {
          "type": "boolean",
          "description": "Follow symbolic links"
        },
        "includeHidden": {
          "type": "boolean",
          "description": "Include hidden files"
        },
        "preserveEmptyDirs": {
          "type": "boolean",
          "description": "Preserve empty directories"
        },
        "binaryFileAction": {
          "type": "string",
          "enum": ["placeholder", "skip", "base64", "comment"],
          "description": "Binary file handling action (legacy, use binaryPolicy)"
        },
        "binaryPlaceholderText": {
          "type": "string",
          "description": "Placeholder text for binary files"
        },
        "binaryDetect": {
          "type": "object",
          "description": "Binary detection configuration",
          "properties": {
            "sampleBytes": {
              "type": "number",
              "description": "Number of bytes to sample for detection"
            },
            "nonPrintableThreshold": {
              "type": "number",
              "description": "Threshold ratio for non-printable characters"
            }
          },
          "additionalProperties": false
        },
        "binaryPolicy": {
          "type": "object",
          "description": "Binary handling policy per category",
          "properties": {
            "image": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "media": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "archive": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "exec": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "font": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "database": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "cert": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "document": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "other": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert"]
            },
            "text": {
              "type": "string",
              "enum": ["comment", "skip", "placeholder", "base64", "convert", "load"]
            }
          },
          "additionalProperties": false
        },
        "binaryCommentTemplates": {
          "type": "object",
          "description": "Template strings for binary file comments",
          "properties": {
            "xml": {
              "type": "string"
            },
            "markdown": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "addLineNumbers": {
          "type": "boolean",
          "description": "Add line numbers to output"
        },
        "lineNumberFormat": {
          "type": "string",
          "description": "Line number format string"
        },
        "treeIndent": {
          "type": "string",
          "description": "Tree view indentation"
        },
        "treeConnectors": {
          "type": "object",
          "description": "Tree view connectors",
          "properties": {
            "middle": {
              "type": "string"
            },
            "last": {
              "type": "string"
            },
            "vertical": {
              "type": "string"
            },
            "empty": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "state": {
      "type": "object",
      "description": "State management configuration",
      "properties": {
        "path": {
          "type": "string",
          "description": "State directory path"
        },
        "maxMessages": {
          "type": "number",
          "minimum": 1,
          "description": "Maximum stored messages"
        },
        "ttl": {
          "type": "number",
          "minimum": 60,
          "description": "State TTL in seconds"
        },
        "conversation": {
          "type": "object",
          "description": "Conversation state management",
          "properties": {
            "historyLimit": {
              "type": "number",
              "minimum": 1,
              "description": "Conversation history limit"
            },
            "summaryLength": {
              "type": "number",
              "minimum": 50,
              "description": "Summary length in characters"
            },
            "storageDriver": {
              "type": "string",
              "enum": ["file", "memory"],
              "description": "Storage driver"
            },
            "storagePath": {
              "type": "string",
              "description": "Storage path"
            },
            "gcEnabled": {
              "type": "boolean",
              "description": "Enable garbage collection"
            },
            "gcInterval": {
              "type": "number",
              "minimum": 3600,
              "description": "GC interval in seconds"
            },
            "gcMaxAge": {
              "type": "number",
              "minimum": 86400,
              "description": "GC maximum age in seconds"
            },
            "sessionTimeout": {
              "type": "number",
              "minimum": 60,
              "description": "Session timeout in seconds"
            },
            "sessionExtendOnActivity": {
              "type": "boolean",
              "description": "Extend session on activity"
            }
          },
          "additionalProperties": false
        },
        "pipeline": {
          "type": "object",
          "description": "Pipeline state configuration",
          "properties": {
            "trackProgress": {
              "type": "boolean",
              "description": "Track pipeline progress"
            },
            "emitEvents": {
              "type": "boolean",
              "description": "Emit pipeline events"
            },
            "saveCheckpoints": {
              "type": "boolean",
              "description": "Save pipeline checkpoints"
            }
          },
          "additionalProperties": false
        },
        "fileProcessing": {
          "type": "object",
          "description": "File processing state configuration",
          "properties": {
            "trackProcessed": {
              "type": "boolean",
              "description": "Track processed files"
            },
            "saveErrors": {
              "type": "boolean",
              "description": "Save processing errors"
            },
            "resumable": {
              "type": "boolean",
              "description": "Enable resumable processing"
            }
          },
          "additionalProperties": false
        },
        "serialization": {
          "type": "object",
          "description": "State serialization configuration",
          "properties": {
            "format": {
              "type": "string",
              "enum": ["json", "yaml"],
              "description": "Serialization format"
            },
            "pretty": {
              "type": "boolean",
              "description": "Pretty print serialized data"
            },
            "compress": {
              "type": "boolean",
              "description": "Compress serialized data"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "aiProviderConfig": {
      "type": "object",
      "description": "AI provider configuration",
      "properties": {
        "name": {
          "type": "string",
          "description": "Provider name"
        },
        "model": {
          "type": "string",
          "description": "Model identifier"
        },
        "priority": {
          "type": "number",
          "minimum": 1,
          "description": "Provider priority (lower = higher priority)"
        },
        "apiKey": {
          "type": "string",
          "description": "API key"
        },
        "baseUrl": {
          "type": "string",
          "format": "uri",
          "description": "API base URL"
        },
        "timeout": {
          "type": "number",
          "minimum": 1000,
          "maximum": 300000,
          "description": "Request timeout in milliseconds"
        }
      },
      "required": ["name", "model"],
      "additionalProperties": false
    },
    "aiTaskConfig": {
      "type": "object",
      "description": "AI task configuration",
      "properties": {
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "maxTokens": {
          "type": "number",
          "minimum": 1,
          "maximum": 32768
        }
      },
      "additionalProperties": false
    },
    "cacheSection": {
      "type": "object",
      "description": "Cache section configuration",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "ttl": {
          "type": "number",
          "minimum": 60
        },
        "maxSize": {
          "type": "number",
          "minimum": 1024
        }
      },
      "additionalProperties": true
    },
    "aiCacheSection": {
      "type": "object",
      "description": "AI cache configuration",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "ttl": {
          "type": "number",
          "minimum": 60
        },
        "keyStrategy": {
          "type": "string",
          "enum": ["hash", "full"]
        }
      },
      "additionalProperties": false
    }
  }
}